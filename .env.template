# Default system initialization values
# These values are used when initializing the system database
PRODUCTION=1

# Default company information
SYSTEM_DOMAIN="rediacc.com"
SYSTEM_COMPANY_NAME="REDIACC.IO"

# Default admin user credentials
SYSTEM_ADMIN_EMAIL="admin@rediacc.io"
SYSTEM_ADMIN_PASSWORD="admin"

# Default team and region names
SYSTEM_DEFAULT_TEAM_NAME="Private Team"
SYSTEM_DEFAULT_REGION_NAME="Default Region"
SYSTEM_DEFAULT_BRIDGE_NAME="Global Bridges"
SYSTEM_SELF_MANAGED_BRIDGE_NAME="My Bridge"

# Docker image tag (must be defined before images that reference it)
# For CI/push triggers: "latest" gets the most recent builds
# For manual runs: specify exact versions (e.g., 0.2.8, 0.2.1) via workflow input
# For standalone deployments: use specific versions (e.g., 0.2.2, 0.2.1)
# Note: "latest" tag is ONLY available in CI mode for automated testing
#       It is NOT allowed for standalone or cloud deployments
TAG=latest

# System configuration
DOCKER_REGISTRY="ghcr.io/rediacc/elite"
# Note: TAG is appended dynamically by ci-env.sh and go script
DOCKER_BRIDGE_IMAGE="${DOCKER_REGISTRY}/bridge:${TAG}"

# SQL Server configuration
# Standard SQL Server image for x86/AMD64 systems
SQL_BASE_IMAGE="mcr.microsoft.com/mssql/server:2022-CU18-ubuntu-20.04"
# For ARM64 systems, override with: mcr.microsoft.com/azure-sql-edge:latest

# Company vault default configuration (JSON)
SYSTEM_COMPANY_VAULT_DEFAULTS="{\"UNIVERSAL_USER_ID\":\"7111\",\"UNIVERSAL_USER_NAME\":\"rediacc\",\"PLUGINS\":{},\"DOCKER_JSON_CONF\":{\"insecure-registries\":[\"ghcr.io\"],\"registry-mirrors\":[]}}"

# Cloud-specific configuration
HTTP_PORT=80

# HTTPS configuration for standalone mode
# HTTPS is enabled by default with self-signed certificates
# Set ENABLE_HTTPS=false to disable HTTPS (useful for reverse proxy scenarios)
ENABLE_HTTPS=true
HTTPS_PORT=443
# Optional: Add additional domains for certificate Subject Alternative Names (comma-separated)
# Example: SSL_EXTRA_DOMAINS="example.com,app.example.com"
SSL_EXTRA_DOMAINS=""

# Standalone mode configuration
# These ports are only exposed when running elite independently (not via cloud instances)
# The HTTP_PORT above is reused for nginx port exposure in standalone mode
# SQL_PORT=1433  # Uncomment to expose SQL Server port for debugging in standalone mode

# Docker registry authentication
# Default credentials - can be overridden in .env.secret or environment
DOCKER_REGISTRY_USERNAME="rediacc"
DOCKER_REGISTRY_PASSWORD="admin"

# Bridge container configuration
# DOCKER_BRIDGE_NETWORK_MODE: Network mode for bridge containers
#   - Leave empty or unset (default): Bridges use the internet network (rediacc_internet)
#   - Set to "host": Bridges use host networking (for CI/testing with localhost SSH)
DOCKER_BRIDGE_NETWORK_MODE=""

# DOCKER_BRIDGE_API_URL: Override API URL for bridges
#   - Leave empty or unset (default): Bridges use http://rediacc-web (container DNS)
#   - Set to "http://localhost": Required when using host networking mode
DOCKER_BRIDGE_API_URL=""

# INSTANCE_NAME: Instance identifier for multi-instance deployments
#   - Leave empty (default): Standalone mode, uses "rediacc" as container prefix
#   - Set to name: Cloud mode, uses name as docker-compose project and container prefix
INSTANCE_NAME=""

# CI/Test Mode Configuration
# WARNING: Only enable for local development and testing!
# When enabled, this bypasses:
#   - CAPTCHA verification for registration
#   - Email verification requirements
# IMPORTANT: Never enable in production (cloud instances)
# Production instances are created via cloud/go which manages this automatically
CI_MODE=false
